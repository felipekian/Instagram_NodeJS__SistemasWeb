<!DOCTYPE HTML>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8">

		<title>Instagram NodeJS</title>
		
		<!-- Icone do titulo da pagina -->
		<link rel="icon" type="image/jpg" href="images/iconeInstagram.png" />

		<!--Font Google-->
		<link href="https://fonts.googleapis.com/css?family=Rubik" rel="stylesheet">

		<!-- JQuery -->
		<script src="http://code.jquery.com/jquery-3.1.1.min.js"></script>

		<!-- bootstrap - link cdn -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
	
		<!-- incluindo css -->
		<link href="css/style.css" rel="stylesheet">

		<style>
			.back{
				padding: 1px 1px;
				margin: 1px 1px; 
				background-color: antiquewhite;
			}
		</style>

		<script>
			$(document).ready(function(){

				function carrega_postagens(){
					// criar xmlhttprequest
					var xhr = new XMLHttpRequest();
					xhr.open("GET", "http://localhost:8080/api");

					xhr.onload = function(){
						if(xhr.status === 200){
							var data = $.parseJSON(xhr.responseText);
							
							
							for(let i = 0; i < data.length; i++){								

									$('#container_timeline').append(
										'<div >'+																				
											
											'<img class="confImagensFeed img-thumbnail col-md-6 col-md-4 " src="http://localhost:8080/imagens/'+data[i].url_imagem+'" />'+										
											
										'</div>'
									);
							} 							

							

							$('.btn_remover_postagem').click(function(){
								var id_comentario = this.value;

								var xhr = new XMLHttpRequest();
								xhr.open('DELETE', 'http://localhost:8080/api/'+id_comentario);
								
								xhr.onload = function(){
									if(xhr.status === 200){
										window.location.href = '/home';
									}
								}

								xhr.send();

							});

							$('.btn_postagem').click(function(){
								var id = this.value;
								var id_input_comentario = 'postagem_'+id;
								var comentario = $('#'+id_input_comentario).val();

								var xhr = new XMLHttpRequest();
								xhr.open('PUT', 'http://localhost:8080/api/'+id);
								xhr.setRequestHeader('Content-Type', 'application/json');

								xhr.onload = function(){
									if(xhr.status === 200){
										window.location.href = '/home';
									}
								}

								xhr.send(JSON.stringify({comentario : comentario}));

							});
						}
					}

					xhr.send();					
				}

				carrega_postagens();

				$('#feedPessoal').click(function(){
					location.href = "/home";
				});

				$('#btn_sair').click(function(){
					location.href = "/";
				});

				$('#btn_incluir').click(function(){
					$('#container_timeline').hide();
					$('#container_form').show();
				});

				$('#btn-cancelar-publicacao').click(function(){
					$('#container_timeline').show();
					$('#container_form').hide();
					return false;
				});

				$('#btn-publicar').click(function(){

					// criar um formData
					var formData = new FormData();

					var arquivo = document.getElementById("arquivo").files[0];
					var titulo = document.getElementById("titulo").value;
					var legenda = document.getElementById("legenda").value;

					formData.append("arquivo", arquivo);
					formData.append("titulo", titulo);
					formData.append("legenda", legenda);

					// criar xmlhttprequest
					var xhr = new XMLHttpRequest();

					// verificar as mudanças de estado
					xhr.onreadystatechange = function(){
						if(xhr.readyState == 4){
							var resposta = xhr.responseText;
							document.getElementById('mensagem').innerHTML = resposta;

							window.location.reload();
						}
					}

					//fazer o envio do nosso request
					xhr.open("POST", "http://localhost:8080/api");
					xhr.send(formData);
				});

				$('#btn-perfil').click( function() {




				});

				

			});
		</script>

	</head>

	<body>

		<nav class="navbar navbar-default">
			<div class="container">
				<div class="col-md-12">
					<div class="container-fluid" >
						<img id="feedPessoal" title="Feed principal" src="images/logo2.jpg" class="logo2" >
						  <input  id="Cpesquisa" placeholder="    Pesquisar..." type="text" autocomplete="true" title="Pesquise amigos">						
						  <img  src="images/CLOSE_mod.png" class="pull-right btn-sair" id="btn_sair" title="Encerrar">
						  <img alt="perfil" src="images/perfil.jpg" class="pull-right btn-incluir" id="btn_incluir" title="Perfil">
					</div>
				</div>
			</div>
		</nav>

		<!-- parte das informações do usuario do feed pessoal -->
		<div class="container container_feed">
			<div class="col-md-3"></div>
			<div class="col-md-2"><label>Foto de Perfil</label></div>
			<div class="col-md-2"><label>Seguindo</label></div>
			<div class="col-md-2"><label>Seguidores</label></div>
			<div class="col-md-3"></div>
		</div>

		<!-- fazer um grid de fotos -->
		<div class="container">
			
				<div id="container_timeline" ></div>						
			
		</div>


		<div class="container" style="display:none" id="container_form">
			<div class="panel panel-default">

			<div class="panel-heading"><h3 style="text-align: center">Perfil de usuário - Área de atualização</h3></div>
			
			<div class="panel-body">
				<div class="form-group">
					Foto de perfil: <input type="file" name="arquivo" id="arquivo" class="form-control">
				</div>

				<div class="form-group">
					Nome de usuário: <input type="text" name="titulo" id="titulo" class="form-control" placeholder="Atualizar nome de usuário">
				</div>

				<div class="form-group">
					Nome Completo: <input type="text" name="titulo" id="titulo" class="form-control" placeholder="Atualizar nome ">
				</div>

				<div class="form-group">
					Senha atual: <input type="text" name="titulo" id="titulo" class="form-control" placeholder="Senha atual">
				</div>

				<div class="form-group">
					Nova senha: <input type="text" name="titulo" id="titulo" class="form-control" placeholder="Nova senha">
				</div>

				<div class="form-group">
					<button class="btn btn-success" id="btn-publicar">Atualizar</button>
					<button class="btn btn-danger" id="btn-cancelar-publicacao">Cancelar</button>
				</div>
				<div id="mensagem"></div>
			</div>
		</div>
	</body>
</html>